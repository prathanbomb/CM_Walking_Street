<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test.material.supitsara.materialnavigationtest" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="userPortrait" >
        </activity>
        <activity
            android:name=".BoothListActivity"
            android:label="@string/title_activity_booth_list"
            android:screenOrientation="userPortrait" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.test.material.supitsara.materialnavigationtest.MainActivity" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="userPortrait" >
        </activity>
        <activity
            android:name=".Splash"
            android:screenOrientation="userPortrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BoothDetailActivity"
            android:label="@string/title_activity_booth_detail"
            android:parentActivityName=".BoothListActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.test.material.supitsara.materialnavigationtest.BoothListActivity" />
        </activity>
        <activity
            android:name=".WriteReviewActivity"
            android:label="@string/title_activity_write_review"
            android:parentActivityName=".BoothDetailActivity"
            android:theme="@style/AppTheme" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.test.material.supitsara.materialnavigationtest.BoothDetailActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:theme="@style/AppTheme" >
        </activity>
    </application>

</manifest>
