<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="true"
        card_view:contentPadding="1dp"
        card_view:backgroundTint="@color/button_material_light">
        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="50dp"/>

            <RelativeLayout
                android:id="@+id/mid_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_thumbnail">

                <TextView
                    android:id="@+id/booth_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:background="#5c1b1b1b"
                    android:alpha="0.8"
                    android:textColor="#ffffff"
                    android:textSize="20dp"
                    android:text="Test"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textStyle="bold" />


            </RelativeLayout>

            <TextView
                android:id="@+id/booth_description"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="5dp"
                android:paddingBottom="8dp"
                android:alpha="0.8"
                android:textColor="@color/secondary_text_default_material_light"
                android:textSize="15dp"
                android:text="Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test Test"
                android:layout_below="@+id/mid_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5c1b1b1b"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/rating_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/abc_btn_rating_star_on_mtrl_alpha"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/distance"
                    android:layout_toStartOf="@+id/distance"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="3dp"/>

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Test"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="4dp"/>

                <ImageView
                    android:id="@+id/review_ic"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/users_icon"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/distance"
                    android:layout_toStartOf="@+id/distance"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Test"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="4dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#5c1b1b1b"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp"
                android:id="@+id/linearLayout2">

                <ImageView
                    android:id="@+id/road_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@drawable/road_sign"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/distance"
                    android:layout_toStartOf="@+id/distance"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="4dp"/>

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Test"
                    android:textColor="#fff"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="3dp"/>


            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/wishlist"
                android:src="@drawable/heart_icon_transparency"
                android:layout_above="@+id/mid_layout"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>